<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#5494DC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davenotdavid.samplepuzzle.InfoActivity">


    <ImageView
        android:id="@+id/img"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:background="@drawable/image_border"
        android:padding="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/solve_me" />

    <Button
        android:id="@+id/button_inst"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_button_round_rect2_border"
        android:text="Instructions"
        android:textColor="#ffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/button_inst"
        android:layout_below="@+id/button_inst"
        android:layout_marginTop="45dp"
        android:background="@drawable/custom_button_round_rect2_border"
        android:text="Play"
        android:textColor="#ffff"
        android:textSize="20dp" />
</RelativeLayout>
